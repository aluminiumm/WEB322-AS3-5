<section>
    <div id="admin-dashboard">
        <h1>Show Dashboard</h1>

        <table class="list">
            <thead>
                <th>Title</th>
                <th>Description</th>
                <th>Category</th>
                <th>Rating</th>
                <th>Thumbnail <i class="material-icons">photo_camera</i></th>
                <th>Main <i class="material-icons">photo_camera</i></th>
                <th>Rental</th>
                <th>Purchase</th>
                <th>TV</th>
                <th>Featured</th>
            </thead>
            <tbody>
                {{#each data}}
                    <tr>
                    <td>
                        <p><strong><a href="/show/detail/{{this.id}}">{{this.showTitle}}</a></strong></p>
                        <a href="/show/edit/{{this.id}}" class="edit-button"><i class="material-icons">edit</i>Edit</a> 
                        <a href="/show/delete/{{this.id}}?method=DELETE" class="delete-button"><i class="material-icons">delete</i>Delete</a>
                    </td>
                    <td class="tx-small" width="300px">{{this.description}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.rating}}</td>
                    <td><img src="/uploads/{{this.imageS}}" alt="Thumbnail"></td>
                    <td><img src="/uploads/{{this.imageL}}" alt="Main"></td>
                    <td>${{this.priceRent}}</td>
                    <td>${{this.priceBuy}}</td>
                    <td>{{this.tv}}</td>
                    <td>{{this.featured}}</td>
                    </tr>
                {{else}}
                    <td colspan="10">
                        <p>No shows in the database</p>
                    </td>
                {{/each}}
            </tbody>
        </table>
        <div class="tx-align-center">
            <a href="/show/add"><button type="button">Add a Show</button></a>
        </div>
    </div><!-- /admin-dashboard -->
</section>